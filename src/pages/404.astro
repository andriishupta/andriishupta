---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

const { pathname } = Astro.url;
---

<html lang="en">
	<head>
		<MainHead title="Not Found" />
		<style>
			.wrapper {
				margin-top: 2em;
				margin-bottom: 2em;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1>Page Not Found</h1>
			<h2>
				Looking for an article? Try <a
					href={`https://blog.andriishupta.dev${pathname}`}
					rel="noreferrer"
					>https://blog.andriishupta.dev{pathname}
				</a>
			</h2>
		</div>
		<!-- <Footer /> -->
	</body>
</html>
